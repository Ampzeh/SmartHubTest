<div>
    <p>@message</p>

    <button @onclick="Cancel" class="btn btn-secondary">Cancel</button>
    <button @onclick="Confirm" class="btn btn-primary">Confirm</button>
</div>

@code {
    [CascadingParameter] BlazoredModalInstance blazoredModal { get; set; } = default!;
    [Parameter] public string? message { get; set; }

    // protected override void OnInitialized() => BlazoredModal.SetTitle("Enter a Message");

    private async Task Confirm() => await blazoredModal.CloseAsync(ModalResult.Ok());
    private async Task Cancel() => await blazoredModal.CancelAsync(ModalResult.Cancel());
}